{
	"compilerOptions": {
		"lib": [
			"es2015",
			"dom"
		],
		"types": [
			"node"
		],
		"target": "es5",
		"module": "commonjs",
		"outDir": "cordova/www",
		"moduleResolution": "node",
		"sourceMap": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"noUnusedParameters": true,
		"allowUnusedLabels": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"suppressImplicitAnyIndexErrors": true
	},
	"exclude": [
		"test",
		"config",
		"cordova",
		"node_modules",
		"./node_modules"
	]
}
