{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowUnusedLabels": false,
    "suppressImplicitAnyIndexErrors": true,
    "rootDir": "src",
    "outDir": "mobile/www"
  },
  "exclude": [
    "node_modules"
  ]
}
